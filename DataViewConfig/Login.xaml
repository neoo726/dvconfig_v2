<Window x:Class="DataViewConfig.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataViewConfig"
        mc:Ignorable="d" 
        WindowStyle="None" 
        Title="Login" Height="270" Width="500"  Loaded="Window_Loaded"  
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True"
        Foreground="White" Icon="/Images/icon.png">
    <Window.Resources>
        <WindowChrome x:Key="WindowChromeKey">
            <WindowChrome.ResizeBorderThickness>
                <Thickness>5</Thickness>
            </WindowChrome.ResizeBorderThickness>
            <WindowChrome.CaptionHeight>0</WindowChrome.CaptionHeight>
        </WindowChrome>
    </Window.Resources>
    <Border x:Name="grid" Background="Black" Margin="3" CornerRadius="5" >
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"/>
        </Border.Effect>
        <Grid  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition  Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
                
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                <Button x:Name="CloseBtn" Content="&#xf00d;" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource ImageButton}"
            Click="CloseBtn_Click"></Button>
            </StackPanel>
            <Image Source="/Images/Roff.png" Width="150" Height="200" Grid.Column="0" Grid.Row="1"/>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
                <StackPanel   >
                    <TextBlock Height="40" Text="{StaticResource application_title}" FontFamily="{StaticResource NormalFamily}" Style="{StaticResource NormalText}" Margin="0 10 0 0 " FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Vertical"  Grid.Row="1" HorizontalAlignment="Center" Margin="5">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                        <Image Source="/Images/User.png"  Width="35" Height="35"/>
                        <TextBox x:Name="LoginNameTxtBox"  Text="zpmc" VerticalContentAlignment="Center" Height="30" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                        <Image Source="/Images/Pwd.png" Width="35" Height="35"/>
                        <PasswordBox x:Name="LoginPwdTxtBox"  Password="zpmc" VerticalContentAlignment="Center" Height="30" Width="150"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="3" Height="40" Margin="10 20 0 0" >
                    <Button Style="{StaticResource  NormalButton}"  Click="Button_Click"
                    Height="35" Width="210"  VerticalAlignment="Center" HorizontalAlignment="Center" Content="Login"/>
                </StackPanel>
               
            </StackPanel>
        </Grid>
    </Border>
</Window>
