<Window x:Class="DataViewConfig.LoginSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataViewConfig" WindowStartupLocation="CenterScreen" 
        mc:Ignorable="d"  Background="{StaticResource NormalBackGround}" 
        Title="选择配置类型" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <RadioButton x:Name="RCMSGUI_RadioBtn"   Content="RCMS__GUI"  Foreground="White" Margin="10"/>
            <RadioButton x:Name="DATAVIEW_RadioBtn" IsChecked="True" Content="DATAVIEW" Foreground="White" Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="ConfirmBtn" Content="确认" Click="ConfirmBtn_Click" Style="{StaticResource NormalButton}"/>
        </StackPanel>
    </Grid>
</Window>
