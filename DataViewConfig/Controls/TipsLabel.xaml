<UserControl x:Class="DataViewConfig.Controls.TipsLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataViewConfig.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    <Border>
        <Label Content="&#xf06a;" Style="{StaticResource NormalLabel}"  Foreground="Orange"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label.ToolTip>
                <Border>
                    <StackPanel>
                        <TextBlock x:Name="TipsTxtBlock" Text="asaa" FontFamily=" Microsoft YaHei" Width="auto"/>
                        <Image x:Name="TipsImage" Source="./" />
                    </StackPanel>
                </Border>
            </Label.ToolTip>
        </Label>
    </Border>
</UserControl>
